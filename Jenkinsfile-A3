pipeline {
    agent any

    environment {
        VENV = "./venv"
    }

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Cloning repository...'
                checkout scm
            }
        }

        stage('Set up Python & venv') {
            steps {
                sh '''
                python3 -m venv $VENV
                source $VENV/bin/activate
                pip install --upgrade pip
                pip install selenium pytest
                '''
            }
        }

        stage('Run Selenium Tests') {
            steps {
                sh '''
                source $VENV/bin/activate
                cd selenium-tests
                pytest > result.log
                cat result.log
                '''
            }
        }
    }

    post {
        success {
            echo '✅ All tests passed successfully!'
        }
        failure {
            echo '❌ Some tests failed. Check result.log for details.'
        }
    }
}
