test_08_nav_register_to_login.py
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options
import time

def test_nav_register_to_login():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/register")
    driver.find_element(By.LINK_TEXT, "Login Now").click()
    time.sleep(1)
    assert "login" in driver.current_url.lower()
    driver.quit()

test_09_nav_login_to_register.py
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options
import time

def test_nav_login_to_register():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/login")
    driver.find_element(By.LINK_TEXT, "Register Now").click()
    time.sleep(1)
    assert "register" in driver.current_url.lower()
    driver.quit()

test_10_header_texts.py
from selenium import webdriver
from selenium.webdriver.chrome.options import Options

def test_header_texts():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/login")
    assert "Login to your account" in driver.page_source
    driver.get("http://13.48.48.149:3000/register")
    assert "Create a new account" in driver.page_source
    driver.quit()
