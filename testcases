test_01_homepage_loads.py
from selenium import webdriver
from selenium.webdriver.chrome.options import Options

def test_homepage_loads():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/")
    assert "Login" in driver.page_source
    driver.quit()

test_02_register_page_loads.py
from selenium import webdriver
from selenium.webdriver.chrome.options import Options

def test_register_page_loads():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/register")
    assert "Create a new account" in driver.page_source
    driver.quit()

test_03_register_fields_exist.py
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options

def test_register_fields_exist():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/register")
    assert driver.find_element(By.XPATH, "//input[@placeholder='Mariam']")
    assert driver.find_element(By.XPATH, "//input[@placeholder='mrniazi@gmail.com']")
    assert driver.find_element(By.XPATH, "//input[@placeholder='12345678']")
    driver.quit()

test_04_register_button_clickable.py
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options

def test_register_button_clickable():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/register")
    button = driver.find_element(By.XPATH, "//button[text()='Register']")
    assert button.is_enabled()
    driver.quit()

