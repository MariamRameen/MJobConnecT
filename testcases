def test_login_fields_exist():
    options = Options()
    options.add_argument("--headless")
    driver = webdriver.Chrome(options=options)
    driver.get("http://13.48.48.149:3000/login")
    assert driver.find_element(By.XPATH, "//input[@placeholder='mariam15@gmail.com']")
    assert driver.find_element(By.XPATH, "//input[@placeholder='Your Password']")
    driver.quit()

